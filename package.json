{
  "main": "electron-main.js",
  "name": "orchestrator",
  "private": true,
  "version": "0.2.3",
  "build": {
    "appId": "house.marchal.orchestrator",
    "productName": "Orchestrator",
    "files": [
      "dist/",
      "preload.js",
      "electron-main.js",
      "package.json",
      "node_modules/"
    ],
    "fileAssociations": [
    {
      "ext": "or",
      "name": "Orchestrator Flow File",
      "description": "Orchestrator Flow JSON",
      "role": "Editor",
      "icon": "build/icon.ico"
    }],
    "extraResources": [
      {
        "from": "backend/",
        "to": "backend",
        "filter": ["**/*"]
      },
      {
        "from": "backend/node_modules/",
        "to": "backend/node_modules",
        "filter": ["**/*"]
      },
      {
        "from": "node_runtime/",
        "to": "node_runtime",
        "filter": ["**/*"]
      },
      {
        "from": "preload/",
        "to": "preload",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
    "oneClick": false, 
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "runAfterFinish": true 
    }
  },
  
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "backend": "node backend/server.js",
    "start": "concurrently \"npm run backend\" \"npm run dev\"",
    "electron": "electron electron-main.js",
    "electron:dev": "concurrently \"npm run backend\" \"vite\" \"wait-on http://localhost:5173 && electron electron-main.js\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run install:backend && npm run build && electron-builder",
    "install:backend": "cd backend && npm install"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@monaco-editor/react": "^4.6.0",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "dagre": "^0.8.5",
    "express": "^5.1.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-resizable": "^3.0.5",
    "reactflow": "^11.10.4",
    "tree-kill": "^1.2.2",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/dagre": "^0.7.52",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/react-resizable": "^3.0.7",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "electron": "13.6.9",
    "electron-builder": "22.14.13",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "wait-on": "^8.0.3",
    "express": "^5.1.0",
    "cors": "^2.8.5"
  }
}
